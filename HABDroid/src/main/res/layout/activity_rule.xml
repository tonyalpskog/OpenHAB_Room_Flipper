<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rule"
    android:tag="activity_rule"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zenit.habclient.rule.RuleActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/section_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name of rule:" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rule_name_textview"
            android:layout_gravity="left|top"
            android:layout_alignBottom="@+id/section_label"
            android:layout_toRightOf="@+id/section_label"
            android:text="SampleRuleName" />

    </LinearLayout>

    <ViewFlipper
        android:id="@+id/rule_viewFlipper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <include layout="@layout/merge_rule_if_tree" />
        <include layout="@layout/merge_rule_then_list" />

    </ViewFlipper>

</LinearLayout>
